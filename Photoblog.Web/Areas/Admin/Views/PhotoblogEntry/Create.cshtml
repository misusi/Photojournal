@model Photoblog.Models.ViewModels.PhotoblogEntryViewModel
<div class="container">
    <div class="row">
        <!--form inputs-->
        <form method="post" enctype="multipart/form-data">
            <div class="col-6">
                <div class="form-group">
                    <label class="form-label mt-4">Title for this set of photos</label>
                    <input asp-for="PhotoSetTitle" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label class="form-label mt-4">Description for this set of photos.</label>
                    <input asp-for="PhotoSetDescription" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label class="form-label mt-4">When was this set taken?</label>
                    <input asp-for="PhotoSetDate" type="datetime" class="form-control">
                </div>
                <div class="form-group">
                    <label class="form-label mt-4">Select photos to include in this set</label>
                    <input class="form-control" multiple type="file" name="postedFiles">
                </div>
                <button class="btn btn-success mt-3" type="submit">Upload PhotoSet</button>
            </div>
        </form>
        <!--display image thumbnails if they were selected-->
        <div class="col-6">
        </div>
    </div>
</div>